<div class="card video-card">
  <div class="card-image">
    <div style="cursor:pointer;">
      <%= link_to link_url do %>
        <%= image_tag(image, style: "width:100%;height:auto") %>
      <% end %>
    </div>
    <span class="card-title"><%= title %></span>
    <a data-action="videos--video-preview#addVideoToProject" data-video-id="<%= video_id %>" class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add</i></a>
  </div>
</div>