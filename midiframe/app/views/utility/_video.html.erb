<% if project.font && project.font.file.attached? %>
<style>
    @font-face {
        font-family: "<%= project.font.file.blob.filename %>";
        src: url("<%= url_for(project.font.file) %>");
    }

    span#note-text-text {
        font-family: "<%= project.font.file.blob.filename %>";
    }
</style>
<% end %>

<div id="video-bounding-box">
  <span data-video-width=<%= @video_width %> data-target="patterns--midi-device.noteText patterns--video-text.noteText" data-action="mousedown->patterns--video-text#onMouseDown" id="note-text-text"></span>
  <video id="midi-video" class="video-js vjs-fluid" preload="auto" width="1000" data-target="patterns--video.video patterns--midi-device.video" controls>
      <source src="<%= url_for(project.playback_video) %>" type="video/mp4" />
  </video>
</div>